local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- NETTOYAGE DES ANCIENNES FENÊTRES
for _, v in pairs(game:GetService("CoreGui"):GetChildren()) do
    if v:IsA("ScreenGui") and (v.Name:find("Fluent") or v:FindFirstChild("Main")) then
        v:Destroy()
    end
end

local Config = {
    Aimbot = false,
    FOV = 150,
    FlyEnabled = false,
    FlySpeed = 50,
    InfiniteJump = false,
    Tornado = false,
    Running = true,
    WPCount = 0
}

-- CERCLE FOV POUR L'AIMBOT
local FOVCircle = Drawing.new("Circle")
FOVCircle.Thickness = 1
FOVCircle.Visible = false
FOVCircle.Color = Color3.fromRGB(255, 255, 255)

-- CRÉATION DU MENU (Comme sur tes photos)
local Window = Fluent:CreateWindow({
    Title = "fait par 2009",
    SubTitle = "rejoin le discord",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark"
})

local Tabs = {
    Joueur = Window:AddTab({ Title = "Joueur", Icon = "user" }),
    Aimbot = Window:AddTab({ Title = "Aimbot", Icon = "target" }),
    Visuels = Window:AddTab({ Title = "Visuels", Icon = "eye" }),
    Waypoints = Window:AddTab({ Title = "Waypoints", Icon = "map-pin" }),
    Divers = Window:AddTab({ Title = "Divers", Icon = "plus-circle" }),
    Physique = Window:AddTab({ Title = "Physique", Icon = "activity" })
}

-- --- JOUEUR ---
Tabs.Joueur:AddSlider("Vitesse", {Title = "Vitesse", Default = 16, Min = 16, Max = 250, Rounding = 0, Callback = function(v) if LocalPlayer.Character then LocalPlayer.Character.Humanoid.WalkSpeed = v end end})
Tabs.Joueur:AddToggle("SautInf", {Title = "Saut Infini", Default = false}):OnChanged(function(v) Config.InfiniteJump = v end)

-- --- AIMBOT (LA PARTIE QUI MANQUAIT) ---
Tabs.Aimbot:AddToggle("AimActive", {Title = "Activer l'Aimbot", Default = false}):OnChanged(function(v) Config.Aimbot = v end)
Tabs.Aimbot:AddSlider("AimFOV", {Title = "Rayon du FOV", Default = 150, Min = 30, Max = 800, Rounding = 0, Callback = function(v) Config.FOV = v end})

-- --- VISUELS ---
Tabs.Visuels:AddButton({Title = "Full Bright", Callback = function() game:GetService("Lighting").Brightness = 2 game:GetService("Lighting").ClockTime = 14 end})

-- --- WAYPOINTS (MULTI-POSITIONS) ---
Tabs.Waypoints:AddButton({
    Title = "Enregistrer Nouvelle Position",
    Callback = function()
        if LocalPlayer.Character then
            Config.WPCount = Config.WPCount + 1
            local currentPos = LocalPlayer.Character.HumanoidRootPart.CFrame
            local wpName = "Position " .. Config.WPCount
            Tabs.Waypoints:AddButton({
                Title = "Se TP à : " .. wpName,
                Callback = function() LocalPlayer.Character.HumanoidRootPart.CFrame = currentPos end
            })
            Fluent:Notify({Title = "Waypoints", Content = wpName .. " ajoutée !", Duration = 2})
        end
    end
})

-- --- DIVERS ---
Tabs.Divers:AddButton({Title = "SUPPRIMER LE SCRIPT", Callback = function() Config.Running = false FOVCircle:Remove() Window:Destroy() end})

-- --- PHYSIQUE ---
Tabs.Physique:AddToggle("TornadoEffect", {Title = "Effet Tornade", Default = false}):OnChanged(function(v) Config.Tornado = v end)
Tabs.Physique:AddToggle("FlyCheck", {Title = "Activer Fly", Default = false}):OnChanged(function(v) Config.FlyEnabled = v end)

-- --- LOGIQUE GLOBALE ---
RunService.RenderStepped:Connect(function()
    if not Config.Running then return end
    
    FOVCircle.Visible = Config.Aimbot
    FOVCircle.Radius = Config.FOV
    FOVCircle.Position = UserInputService:GetMouseLocation()

    -- Logique Aimbot
    if Config.Aimbot and UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2) then
        local target = nil
        local shortest = Config.FOV
        for _, p in pairs(Players:GetPlayers()) do
            if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("Head") then
                local pos, onS = Camera:WorldToViewportPoint(p.Character.Head.Position)
                if onS then
                    local dist = (Vector2.new(pos.X, pos.Y) - FOVCircle.Position).Magnitude
                    if dist < shortest then target = p shortest = dist end
                end
            end
        end
        if target then Camera.CFrame = CFrame.lookAt(Camera.CFrame.Position, target.Character.Head.Position) end
    end

    -- Logique Tornade
    if Config.Tornado and LocalPlayer.Character then
        LocalPlayer.Character.HumanoidRootPart.CFrame *= CFrame.Angles(0, math.rad(20), 0)
    end
end)

UserInputService.JumpRequest:Connect(function()
    if Config.InfiniteJump and LocalPlayer.Character then LocalPlayer.Character.Humanoid:ChangeState("Jumping") end
end)

Window:SelectTab(1)
