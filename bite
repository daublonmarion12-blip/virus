local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local Camera = workspace.CurrentCamera

-- Nettoyage
for _, v in pairs(game:GetService("CoreGui"):GetChildren()) do
    if v:IsA("ScreenGui") and (v.Name:find("Fluent") or v:FindFirstChild("Main")) then
        v:Destroy()
    end
end

local Config = {
    Aimbot = false,
    FOV = 150,
    FlyEnabled = false,
    FlySpeed = 50,
    Running = true
}

local FOVCircle = Drawing.new("Circle")
FOVCircle.Thickness = 2
FOVCircle.Color = Color3.fromRGB(255, 0, 0)
FOVCircle.Visible = false

local Window = Fluent:CreateWindow({
    Title = "fait par 2009",
    SubTitle = "virus/bite @ main",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl 
})

local Tabs = {
    Main = Window:AddTab({ Title = "Combat", Icon = "target" }),
    Physique = Window:AddTab({ Title = "Physique", Icon = "activity" }),
    Divers = Window:AddTab({ Title = "Divers", Icon = "plus-circle" })
}

-- FONCTION CIBLE
local function getClosest()
    local target, dist = nil, Config.FOV
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("Head") and p.Character.Humanoid.Health > 0 then
            local pos, onS = Camera:WorldToViewportPoint(p.Character.Head.Position)
            if onS then
                local mag = (Vector2.new(pos.X, pos.Y) - UserInputService:GetMouseLocation()).Magnitude
                if mag < dist then target = p dist = mag end
            end
        end
    end
    return target
end

-- --- SILENT AIM AGRESSIF ---
local oldIndex
oldIndex = hookmetamethod(game, "__index", function(self, index)
    if Config.Aimbot and self == Mouse and (index == "Hit" or index == "Target") then
        local t = getClosest()
        if t and t.Character and t.Character:FindFirstChild("Head") then
            if index == "Hit" then
                return t.Character.Head.CFrame
            elseif index == "Target" then
                return t.Character.Head
            end
        end
    end
    return oldIndex(self, index)
end)

-- --- INTERFACE ---
Tabs.Main:AddToggle("AimActive", {Title = "Activer Aimbot & Dégâts", Default = false}):OnChanged(function(v) Config.Aimbot = v end)
Tabs.Main:AddSlider("AimFOV", {Title = "Taille FOV", Default = 150, Min = 30, Max = 800, Callback = function(v) Config.FOV = v end})

Tabs.Physique:AddToggle("FlyCheck", {Title = "Activer Fly", Default = false}):OnChanged(function(v) Config.FlyEnabled = v end)
Tabs.Physique:AddSlider("FlySpeed", {Title = "Vitesse Fly", Default = 50, Min = 10, Max = 300, Callback = function(v) Config.FlySpeed = v end})

-- --- BOUCLE DE RENDU ---
RunService.RenderStepped:Connect(function()
    if not Config.Running then return end
    
    FOVCircle.Visible = Config.Aimbot
    FOVCircle.Radius = Config.FOV
    FOVCircle.Position = UserInputService:GetMouseLocation()

    -- Verrouillage Caméra
    if Config.Aimbot and UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2) then
        local t = getClosest()
        if t then Camera.CFrame = CFrame.lookAt(Camera.CFrame.Position, t.Character.Head.Position) end
    end
    
    -- Fly
    if Config.FlyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local root = LocalPlayer.Character.HumanoidRootPart
        local d = Vector3.new(0,0,0)
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then d = d + Camera.CFrame.LookVector end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then d = d - Camera.CFrame.LookVector end
        root.Velocity = d * Config.FlySpeed
        root.Anchored = (d == Vector3.new(0,0,0)) -- Évite de tomber
    elseif LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        LocalPlayer.Character.HumanoidRootPart.Anchored = false
    end
end)

Window:SelectTab(1)
