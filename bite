local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- Nettoyage
for _, v in pairs(game:GetService("CoreGui"):GetChildren()) do
    if v:IsA("ScreenGui") and (v.Name:find("Fluent") or v:FindFirstChild("Main")) then
        v:Destroy()
    end
end

local Config = {
    Aimbot = false,
    FOV = 150,
    FlyEnabled = false,
    FlySpeed = 50,
    InfiniteJump = false,
    Tornado = false,
    YeetOnTouch = false,
    Running = true,
    WPCount = 0
}

-- CR√âATION DU CERCLE FOV (ASSUR√âE)
local FOVCircle = Drawing.new("Circle")
FOVCircle.Thickness = 2
FOVCircle.NumSides = 60
FOVCircle.Radius = Config.FOV
FOVCircle.Filled = false
FOVCircle.Transparency = 1
FOVCircle.Color = Color3.fromRGB(255, 255, 255)
FOVCircle.Visible = false

local Window = Fluent:CreateWindow({
    Title = "fait par 2009",
    SubTitle = "virus/bite @ main",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl 
})

local Tabs = {
    Joueur = Window:AddTab({ Title = "Joueur", Icon = "user" }),
    Aimbot = Window:AddTab({ Title = "Aimbot", Icon = "target" }),
    Waypoints = Window:AddTab({ Title = "Waypoints", Icon = "map-pin" }),
    Physique = Window:AddTab({ Title = "Physique", Icon = "activity" }),
    Divers = Window:AddTab({ Title = "Divers", Icon = "plus-circle" })
}

-- --- INTERFACE ---
Tabs.Aimbot:AddToggle("AimActive", {Title = "Activer Aimbot & FOV", Default = false}):OnChanged(function(v) Config.Aimbot = v end)
Tabs.Aimbot:AddSlider("AimFOV", {Title = "Taille du FOV", Default = 150, Min = 30, Max = 800, Rounding = 0, Callback = function(v) Config.FOV = v end})

Tabs.Joueur:AddSlider("Vitesse", {Title = "Vitesse", Default = 16, Min = 16, Max = 250, Rounding = 0, Callback = function(v) if LocalPlayer.Character then LocalPlayer.Character.Humanoid.WalkSpeed = v end end})

Tabs.Physique:AddToggle("FlyCheck", {Title = "Fly (CTRL pour cacher menu)", Default = false}):OnChanged(function(v) Config.FlyEnabled = v end)
Tabs.Physique:AddToggle("TouchYeet", {Title = "Propulser au toucher", Default = false}):OnChanged(function(v) Config.YeetOnTouch = v end)

Tabs.Waypoints:AddButton({
    Title = "üìç Sauvegarder Position",
    Callback = function()
        if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
            Config.WPCount = Config.WPCount + 1
            local savedPos = LocalPlayer.Character.HumanoidRootPart.CFrame
            local wpName = "Position " .. Config.WPCount
            Tabs.Waypoints:AddButton({
                Title = "TP √† : " .. wpName,
                Callback = function() LocalPlayer.Character.HumanoidRootPart.CFrame = savedPos end
            })
        end
    end
})

Tabs.Divers:AddButton({
    Title = "‚ùå SUPPRIMER LE SCRIPT",
    Callback = function()
        Config.Running = false
        FOVCircle:Remove()
        Window:Destroy()
    end
})

-- --- LOGIQUE ---
local function getClosest()
    local target, dist = nil, Config.FOV
    local mousePos = UserInputService:GetMouseLocation()
    for _, p in pairs(Players:GetPlayers()) do
        if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("Head") then
            local pos, onS = Camera:WorldToViewportPoint(p.Character.Head.Position)
            if onS then
                local mag = (Vector2.new(pos.X, pos.Y) - mousePos).Magnitude
                if mag < dist then target = p dist = mag end
            end
        end
    end
    return target
end

local BV = Instance.new("BodyVelocity")
local BG = Instance.new("BodyGyro")
BV.MaxForce, BG.MaxTorque = Vector3.new(1e8,1e8,1e8), Vector3.new(1e8,1e8,1e8)

RunService.RenderStepped:Connect(function()
    if not Config.Running then return end
    
    -- MISE √Ä JOUR CERCLE FOV
    FOVCircle.Visible = Config.Aimbot
    FOVCircle.Radius = Config.FOV
    FOVCircle.Position = UserInputService:GetMouseLocation()

    -- AIMBOT VISUEL (CLIC DROIT)
    if Config.Aimbot and UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2) then
        local t = getClosest()
        if t then Camera.CFrame = CFrame.lookAt(Camera.CFrame.Position, t.Character.Head.Position) end
    end

    -- FLY
    local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if root then
        if Config.FlyEnabled then
            BV.Parent, BG.Parent = root, root
            BG.CFrame = Camera.CFrame
            local d = Vector3.new(0,0,0)
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then d = d + Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then d = d - Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then d = d - Camera.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then d = d + Camera.CFrame.RightVector end
            BV.Velocity = d * Config.FlySpeed
        else
            BV.Parent, BG.Parent = nil, nil
        end
    end
end)

Window:SelectTab(1)
