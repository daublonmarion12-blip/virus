local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local Camera = workspace.CurrentCamera

-- Nettoyage
for _, v in pairs(game:GetService("CoreGui"):GetChildren()) do
    if v:IsA("ScreenGui") and (v.Name:find("Fluent") or v:FindFirstChild("Main")) then
        v:Destroy()
    end
end

local Config = {
    Aimbot = false,
    SilentAim = true, -- ActivÃ© par dÃ©faut avec l'aimbot
    FOV = 150,
    FlyEnabled = false,
    FlySpeed = 50,
    Running = true
}

local FOVCircle = Drawing.new("Circle")
FOVCircle.Thickness = 2
FOVCircle.Color = Color3.fromRGB(255, 0, 0)
FOVCircle.Visible = false

local Window = Fluent:CreateWindow({
    Title = "VIRUS/BITE - VRAI AIMBOT",
    SubTitle = "par 2009",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl 
})

local Tabs = {
    Combat = Window:AddTab({ Title = "Combat", Icon = "target" }),
    Mouvement = Window:AddTab({ Title = "Mouvement", Icon = "wind" }),
    Waypoints = Window:AddTab({ Title = "Waypoints", Icon = "map-pin" }),
    Divers = Window:AddTab({ Title = "Divers", Icon = "settings" })
}

-- --- LOGIQUE DE DÃ‰TECTION ---
local function getClosest()
    local target, dist = nil, Config.FOV
    local mouseLoc = UserInputService:GetMouseLocation()

    for _, p in pairs(Players:GetPlayers()) do
        if p ~= LocalPlayer and p.Character and p.Character:FindFirstChild("Head") then
            local head = p.Character.Head
            local humanoid = p.Character:FindFirstChild("Humanoid")
            
            if humanoid and humanoid.Health > 0 then
                local pos, onS = Camera:WorldToViewportPoint(head.Position)
                if onS then
                    local mag = (Vector2.new(pos.X, pos.Y) - mouseLoc).Magnitude
                    if mag < dist then
                        target = p
                        dist = mag
                    end
                end
            end
        end
    end
    return target
end

-- --- SILENT AIM (FORCE LES DÃ‰GÃ‚TS) ---
local oldIndex
oldIndex = hookmetamethod(game, "__index", function(self, index)
    if Config.Aimbot and self == Mouse and (index == "Hit" or index == "Target") then
        local t = getClosest()
        if t and t.Character and t.Character:FindFirstChild("Head") then
            return (index == "Hit" and t.Character.Head.CFrame or t.Character.Head)
        end
    end
    return oldIndex(self, index)
end)

-- --- INTERFACE ---
Tabs.Combat:AddToggle("AimActive", {Title = "Activer Vrai Aimbot", Default = false}):OnChanged(function(v) Config.Aimbot = v end)
Tabs.Combat:AddSlider("AimFOV", {Title = "Rayon du FOV", Default = 150, Min = 30, Max = 800, Callback = function(v) Config.FOV = v end})

Tabs.Mouvement:AddToggle("FlyCheck", {Title = "Activer Fly", Default = false}):OnChanged(function(v) Config.FlyEnabled = v end)

-- --- BOUCLE DE RENDU ---
RunService.RenderStepped:Connect(function()
    if not Config.Running then return end
    
    FOVCircle.Visible = Config.Aimbot
    FOVCircle.Radius = Config.FOV
    FOVCircle.Position = UserInputService:GetMouseLocation()

    if Config.Aimbot then
        local t = getClosest()
        -- Verrouillage CamÃ©ra quand on clique droit
        if t and UserInputService:IsMouseButtonPressed(Enum.UserInputType.MouseButton2) then
            Camera.CFrame = CFrame.lookAt(Camera.CFrame.Position, t.Character.Head.Position)
        end
    end
    
    -- Fly Rapide
    if Config.FlyEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local root = LocalPlayer.Character.HumanoidRootPart
        local d = Vector3.new(0,0.5,0)
        if UserInputService:IsKeyDown(Enum.KeyCode.W) then d = d + (Camera.CFrame.LookVector * Config.FlySpeed) end
        if UserInputService:IsKeyDown(Enum.KeyCode.S) then d = d - (Camera.CFrame.LookVector * Config.FlySpeed) end
        root.Velocity = d
    end
end)

-- Divers / Waypoints (Ajout automatique comme demandÃ© avant)
Tabs.Waypoints:AddButton({
    Title = "ðŸ“ Enregistrer Position",
    Callback = function()
        local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if root then
            local pos = root.CFrame
            Tabs.Waypoints:AddButton({
                Title = "TP vers Position",
                Callback = function() LocalPlayer.Character.HumanoidRootPart.CFrame = pos end
            })
        end
    end
})

Tabs.Divers:AddButton({Title = "âŒ Supprimer Script", Callback = function() Config.Running = false FOVCircle:Remove() Window:Destroy() end})

Window:SelectTab(1)
